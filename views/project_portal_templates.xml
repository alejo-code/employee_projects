<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_my_projects"
        name="My Projects">
        <t t-call="portal.portal_layout">
            <div class="container">
                <h1>My Projects</h1>
                <t t-if="projects">
                    <ul>
                        <t t-foreach="projects"
                            t-as="project">
                            <a t-att-href="'/my/employee_projects/%s' % project.id"
                                class="btn btn-primary">
                    Ver Detalles
                            </a>
                            <li>
                                <a t-att-href="'/my/employee_projects/%s' % project.id">
                                    <t t-esc="project.name" />
                                </a>
                            </li>
                        </t>
                    </ul>
                </t>
                <t t-else="">
                    <p>No projects assigned.</p>
                </t>
                <button id="create_project_btn"
                    class="btn btn-primary">Create New Project</button>
            </div>
        </t>
    </template>


    <template id="portal_employee_project_detail"
        name="Employee Project Detail">
        <t t-call="portal.portal_layout">
            <div class="container">
                <h1>Detalles del Proyecto</h1>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <t t-esc="project.name" />
                        </h5>
                        <p class="card-text">
                            <t t-esc="project.description" />
                        </p>
                        <p>
                            <strong>Empleado:</strong>
                            <t t-esc="project.employee_id.name" />
                            <br />
                            <strong>Fecha de Inicio:</strong>
                            <t t-esc="project.start_date or 'N/A'" />
                            <br />
                            <strong>Fecha de Finalizaci√≥n:</strong>
                            <t t-esc="project.end_date or 'N/A'" />
                        </p>
                    </div>
                </div>
                <a href="/my/employee_projects"
                    class="btn btn-secondary mt-3">Regresar a Mis Proyectos</a>
            </div>
        </t>
    </template>



