<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="portal_partner_form"
        name="Portal Partner Form">
        <t t-call="portal.portal_layout">
            <div class="container">
                <h1>Crear un nuevo Socio</h1>
                <form id="create_partner_form">
                    <div class="form-group">
                        <label for="partner_name">Nombre</label>
                        <input type="text"
                            id="partner_name"
                            name="name"
                            class="form-control"
                            required="True" />
                    </div>
                    <div class="form-group">
                        <label for="partner_email">Correo electrónico</label>
                        <input type="email"
                            id="partner_email"
                            name="email"
                            class="form-control"
                            required="True" />
                    </div>
                    <button type="submit"
                        class="btn btn-primary">Crear Socio</button>
                </form>
            </div>
        </t>
    </template>

    <template id="portal_create_project"
        name="Portal Project Form">
        <t t-call="portal.portal_layout">
            <div class="container">
                <h1>Crear un nuevo Socio</h1>
                <form id="create_project_form">
                    <div class="form-group">
                        <label for="name">Nombre</label>
                        <input type="text"
                            id="name"
                            name="name"
                            class="form-control"
                            required="True" />
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <input type="text"
                            id="description"
                            name="description"
                            class="form-control"
                            required="True" />
                    </div>
                    <div class="form-group">
                        <label for="start_date">Fecha Inicio</label>
                        <input type="date"
                            id="start_date"
                            name="start_date"
                            class="form-control"
                            required="True" />
                    </div>
                    <div class="form-group">
                        <label for="end_date">Fecha Fin</label>
                        <input type="date"
                            id="end_date"
                            name="end_date"
                            class="form-control"
                            required="True" />
                    </div>
                    <button type="submit"
                        class="btn btn-primary">Crear Project</button>
                </form>
            </div>
        </t>
    </template>


    <template id="portal_my_projects"
        name="My Projects">
        <t t-call="portal.portal_layout">
            <div class="container">
                <h1>My Projects</h1>
                <t t-if="projects">
                    <ul>
                        <t t-foreach="projects"
                            t-as="project">
                            <a t-att-href="'/my/employee_projects/%s' % project.id"
                                class="btn btn-primary">
                    Ver Detalles
                            </a>
                            <li>
                                <a t-att-href="'/my/employee_projects/%s' % project.id">
                                    <t t-esc="project.name" />
                                </a>
                            </li>
                        </t>
                    </ul>
                </t>
                <t t-else="">
                    <p>No projects assigned.</p>
                </t>
                <a href="/portal/create_project"
                    class="btn btn-primary">Create New Project</a>
            </div>
        </t>
    </template>


    <template id="portal_employee_project_detail"
        name="Employee Project Detail">
        <t t-call="portal.portal_layout">
            <div class="container">
                <h1>Detalles del Proyecto</h1>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <t t-esc="project.name" />
                        </h5>
                        <p class="card-text">
                            <t t-esc="project.description" />
                        </p>
                        <p>
                            <strong>Empleado:</strong>
                            <t t-esc="project.employee_id.name" />
                            <br />
                            <strong>Fecha de Inicio:</strong>
                            <t t-esc="project.start_date or 'N/A'" />
                            <br />
                            <strong>Fecha de Finalización:</strong>
                            <t t-esc="project.end_date or 'N/A'" />
                        </p>
                    </div>
                </div>
                <a href="/my/employee_projects"
                    class="btn btn-secondary mt-3">Regresar a Mis Proyectos</a>
            </div>
        </t>
    </template>



</odoo>
