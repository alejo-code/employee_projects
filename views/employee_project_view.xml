<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="employee_project_action"
        model="ir.actions.act_window">
        <field name="name">Employee Project</field>
        <field name="res_model">employee.project</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="employee_project_menu_root"
        name="Employee Project"
        parent="hr.menu_hr_root"
        sequence="5" />

    <menuitem id="employee_project_menu"
        name="Projects"
        action="employee_project_action"
        parent="employee_project_menu_root"
        sequence="10" />



    <record id="view_employee_project_tree"
        model="ir.ui.view">
        <field name="model">employee.project</field>
        <field name="arch"
            type="xml">
            <tree>
                <field name="name" />
                <field name="employee_id" />
                <field name="start_date" />
                <field name="end_date" />
            </tree>
        </field>
    </record>

    <record id="view_employee_project_form"
        model="ir.ui.view">
        <field name="model">employee.project</field>
        <field name="arch"
            type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="employee_id" />
                        <field name="description" />
                        <field name="start_date" />
                        <field name="end_date" />
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"
                        widget="mail_followers" />
                    <field name="activity_ids"
                        widget="mail_activity" />
                    <field name="message_ids"
                        widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

</odoo>
